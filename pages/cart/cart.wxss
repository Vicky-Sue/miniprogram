.revice_wrap .revice_btn_wrap {
  padding: 20rpx 0;
}
.revice_wrap .revice_btn_wrap button {
  width: 80%;
}
.revice_wrap .revice_btn_wrap .receiverInfo {
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 1px solid var(--themeColor);
}
.revice_wrap .revice_btn_wrap .receiverInfo .receiver {
  display: flex;
  justify-content: space-between;
  align-content: center;
}
.cart_list .cart_title {
  padding: 0 20rpx 20rpx 20rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--themeColor);
  border-bottom: 1px solid var(--themeColor);
}
.cart_group {
  display: flex;
  box-sizing: border-box;
  height: 194rpx;
  padding: 20rpx 0;
  align-content: center;
  justify-content: center;
  border-bottom: 1px solid #dedede;
}
.cart_group .cart_checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_group .cart_goods_img {
  flex: 2;
}
.cart_group .cart_goods_img image {
  width: 80%;
}
.cart_group .cart_goods_info {
  flex: 4;
}
.cart_group .cart_goods_info .cart_goods_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
.cart_group .cart_goods_info .cart_goods_prices {
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin: 20rpx;
}
.cart_group .cart_goods_info .cart_goods_prices .cart_goods_price {
  font-weight: 600;
  color: var(--themeColor);
}
.cart_group .cart_goods_info .cart_goods_prices .cart_goods_num_wrap {
  display: flex;
  height: 50rpx;
}
.cart_group .cart_goods_info .cart_goods_prices .cart_goods_num_wrap text.num_change {
  text-align: center;
  line-height: 42rpx;
  width: 50rpx;
  border: 1px solid #eee;
}
.cart_group .cart_goods_info .cart_goods_prices .cart_goods_num_wrap text.cart_num {
  margin: 0 20rpx;
  text-align: center;
  line-height: 42rpx;
}
.cart_price_check {
  font-size: 30rpx;
  color: #666;
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.cart_price_check .cart_price_allCheck_wrap {
  padding-left: 20rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_price_check .cart_price_amount_wrap {
  flex: 3;
  text-align: right;
  margin-right: 20rpx;
}
.cart_price_check .cart_price_amount_wrap .cart_price_amount text {
  font-size: 34rpx;
  margin-left: 8rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.cart_price_check .cart_price_pay {
  flex: 1;
  font-weight: 600;
  font-size: 36rpx;
  color: #fff;
  background-color: var(--themeColor);
}
